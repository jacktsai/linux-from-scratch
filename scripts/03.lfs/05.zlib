#!/bin/bash
[ ! -e /etc/lfs-release ] && {
    echo 請在 LFS 環境執行!
    exit 0
}

function build() {
cd /tmp/build
rm -rf zlib-1.2.11
tar -xf /tools/src/zlib-1.2.11.tar.xz
cd zlib-1.2.11

./configure \
    --prefix=/usr \
    \
    && make -j8 \
    && make check \
    && make install
}

time { build > /tmp/build/lastbuild.log; }
