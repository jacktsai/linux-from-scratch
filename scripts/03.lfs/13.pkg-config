#!/bin/bash
[ ! -e /etc/lfs-release ] && {
    echo 請在 LFS 環境執行!
    exit 0
}

function build() {
cd /tmp/build
rm -rf pkg-config-0.29.1
tar -xf /tools/src/pkg-config-0.29.1.tar.gz
cd pkg-config-0.29.1

./configure \
    --prefix=/usr \
    --with-internal-glib       \
    --disable-compile-warnings \
    --disable-host-tool        \
    --docdir=/usr/share/doc/pkg-config-0.29.1 \
    \
    && make -j8 \
    && make check \
    && make install
}

time { build > /tmp/build/lastbuild.log; }
