#!/bin/bash
[ $(id -u) -eq 0 ] && {
    echo "請不要使用 root 執行."
    exit 1
}

cd /tools/work
rm -rf ncurses-6.0
tar -xf ../src/ncurses-6.0.tar.gz
cd ncurses-6.0

function build() {
sed -i s/mawk// configure
./configure --prefix=/tools \
            --with-shared   \
            --without-debug \
            --without-ada   \
            --enable-widec  \
            --enable-overwrite \
    > /dev/null \
    && make > /dev/null \
    && make install > /dev/null
}

time build
