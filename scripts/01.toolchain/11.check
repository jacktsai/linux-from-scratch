#!/bin/bash
[ $(id -u) -eq 0 ] && {
    echo "請不要使用 root 執行."
    exit 1
}

cd /tools/work
rm -rf check-0.11.0
tar -xf ../src/check-0.11.0.tar.gz
cd check-0.11.0

function build() {
PKG_CONFIG= ./configure --prefix=/tools \
    > /dev/null \
    && make > /dev/null \
    && make check \
    && make install > /dev/null
}

time build
