#!/bin/bash
[ $(id -u) -eq 0 ] && {
    echo "請不要使用 root 執行."
    exit 1
}

cd /tools/work
rm -rf coreutils-8.26
tar -xf ../src/coreutils-8.26.tar.xz
cd coreutils-8.26

function build() {
FORCE_UNSAFE_CONFIGURE=1 \
./configure \
    --prefix=/tools \
    --enable-install-program=hostname \
    > /dev/null \
    && make > /dev/null \
    && make RUN_EXPENSIVE_TESTS=yes check \
    && make install > /dev/null
}

time build
