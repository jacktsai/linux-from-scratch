#!/bin/bash
[ $(id -u) -eq 0 ] && {
    echo "請不要使用 root 執行."
    exit 1
}

cd /tools/work
rm -rf bzip2-1.0.6
tar -xf ../src/bzip2-1.0.6.tar.gz
cd bzip2-1.0.6
patch --forward --strip=1 --input=../../src/bzip2-1.0.6-install_docs-1.patch

function build() {
    make > /dev/null \
    && make PREFIX=/tools install > /dev/null
}

time build
