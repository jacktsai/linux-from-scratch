#!/bin/bash
[ $(id -u) -eq 0 ] && {
    echo "請不要使用 root 執行."
    exit 1
}

cd /tools/work
rm -rf gzip-1.8
tar -xf ../src/gzip-1.8.tar.xz
cd gzip-1.8

function build() {
./configure --prefix=/tools \
    > /dev/null \
    && make > /dev/null \
    && make check \
    && make install > /dev/null
}

time build
