#!/bin/bash
[ $(id -u) -eq 0 ] && {
    echo "請不要使用 root 執行."
    exit 1
}

cd /tools/work
rm -rf texinfo-6.3
tar -xf ../src/texinfo-6.3.tar.xz
cd texinfo-6.3

function build() {
./configure --prefix=/tools \
    > /dev/null \
    && make > /dev/null \
    && make check \
    && make install > /dev/null
}

time build
