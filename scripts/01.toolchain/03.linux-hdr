#!/bin/bash
[ $(id -u) -eq 0 ] && {
    echo "請不要使用 root 執行."
    exit 1
}

cd /tools/work
rm -rf linux-4.9.9
tar -xf ../src/linux-4.9.9.tar.xz
cd linux-4.9.9

function build() {
make mrproper > /dev/null && \
make INSTALL_HDR_PATH=dest headers_install && \
cp -r dest/include/* /tools/include
}

time build
